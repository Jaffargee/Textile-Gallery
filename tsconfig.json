{
      "extends": "expo/tsconfig.base",
      "compilerOptions": {
            "strict": true,
            "typeRoots": ["./types", "./node_modules/@types"],
            "allowJs": true,
            "paths": {
                  "@/*": [
                              "./*"
                        ]
            }
      },
      "include": [
            "**/*.ts",
            "**/*.tsx",
            ".expo/types/**/*.ts",
            "expo-env.d.ts",
            "nativewind-env.d.ts"
      ]
}